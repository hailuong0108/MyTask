<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/botronshape"
                android:backgroundTint="#E41313"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvUrgent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="Urgent"
                android:textColor="#E41313"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/ivDone1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="#03A9F4"
                app:srcCompat="@drawable/done"
                tools:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/botronshape"
                android:backgroundTint="#FF5722" />

            <TextView
                android:id="@+id/tvHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="High"
                android:textColor="#FF5722"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/ivDone2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="#03A9F4"
                app:srcCompat="@drawable/done"
                tools:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/botronshape"
                android:backgroundTint="#000000" />

            <TextView
                android:id="@+id/tvNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="Normal"
                android:textColor="#000000"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/ivDone3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="#03A9F4"
                app:srcCompat="@drawable/done"
                tools:visibility="gone" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/botronshape"
                android:backgroundTint="#03A9F4" />

            <TextView
                android:id="@+id/tvLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="Low"
                android:textColor="#03A9F4"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/ivDone4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="#03A9F4"
                app:srcCompat="@drawable/done"
                tools:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>